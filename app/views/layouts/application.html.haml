!!!
%html
%head
  %title Paperclip
  = csrf_meta_tags
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
%body
  %nav
    - if user_signed_in?
      = link_to "New Document", new_document_path, class: "btn btn--default"
      = link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn--outline"
    - else
      = link_to "Log In", new_user_session_path, class: "btn btn--outline"
  %p.notice= notice
  %p.alert= alert

  = yield
